<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml/1" style="-fx-background-color: linear-gradient(to bottom, #0f2027, #203a43, #2c5364);">
    <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20; -fx-alignment: center;">
        <ImageView fx:id="logoImage" fitWidth="200" fitHeight="200"
                   style="-fx-effect: dropshadow(gaussian, #00c6ff, 30, 0.6, 0, 0);" />
        <Label text="SimAS 3.0" style="-fx-font-size: 28px; -fx-text-fill: white; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, black, 5, 0.3, 0, 0);" />
        <Label text="Desarrollado por Antonio Llamas García"
               style="-fx-font-size: 18px; -fx-text-fill: #cccccc;" />
        <Label text="Dirigido por Dr. Nicolás Luis Fernández García"
               style="-fx-font-size: 18px; -fx-text-fill: #cccccc;" />
        <Label text="Versión: 3.0" style="-fx-font-size: 20px; -fx-text-fill: white;" />
    </VBox>
</StackPane>
