<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      style="-fx-background-color: linear-gradient(to right, #2c3e50, #4ca1af); -fx-padding: 20;">

    <Label text="Producciones de la gramática" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>

    <ListView fx:id="listProducciones" prefHeight="200" style="-fx-background-radius: 5px;"/>

    <Button fx:id="btnModificar" text="Modificar Producciones"
            style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-size: 14px;" onAction="#onBtnModificarProduccionesAction"/>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="btnPrimero" text="Primero" onAction="#onBtnPrimeroAction"
                style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
        <Button fx:id="btnAnterior" text="Anterior" onAction="#onBtnAnteriorAction"
                style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
        <Button fx:id="btnCancelar" text="Cancelar" onAction="#onBtnCancelarAction"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
        <Button fx:id="btnSiguiente" text="Siguiente" onAction="#onBtnSiguienteAction"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
        <Button fx:id="btnUltimo" text="Último" onAction="#onBtnUltimoAction"
                style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
    </HBox>

</VBox>
